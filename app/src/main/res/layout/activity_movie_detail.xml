<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmajc.cinephile_movieinfo.MovieDetailActivity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:src="@drawable/logan"
        android:id="@+id/iv_movie_detail_poster"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_detail_title"
        android:text="Logan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_movie_detail_poster"
        android:layout_toEndOf="@id/iv_movie_detail_poster"
        android:layout_margin="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_detail_year"
        android:layout_toRightOf="@id/iv_movie_detail_poster"
        android:layout_toEndOf="@id/iv_movie_detail_poster"
        android:layout_below="@id/tv_movie_detail_title"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:text="2017"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_detail_rating_title"
        android:layout_toRightOf="@id/iv_movie_detail_poster"
        android:layout_toEndOf="@id/iv_movie_detail_poster"
        android:layout_below="@id/tv_movie_detail_year"
        android:layout_marginLeft="8dp"
        android:text="Rating: "
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_detail_rating_number"
        android:layout_toRightOf="@id/tv_movie_detail_rating_title"
        android:layout_toEndOf="@id/tv_movie_detail_rating_title"
        android:layout_below="@id/tv_movie_detail_year"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_detail_description"
        android:layout_toRightOf="@id/iv_movie_detail_poster"
        android:layout_toEndOf="@id/iv_movie_detail_poster"
        android:layout_below="@id/tv_movie_detail_rating_title"
        android:layout_marginLeft="8dp"
        android:text="logan swears, patrick stewart swears more"
        android:ellipsize="end"
        android:maxLines="8"/>



</RelativeLayout>
